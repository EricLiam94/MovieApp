<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddMemoirActivity">

    <LinearLayout
        android:id="@+id/main_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/movie_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:divider="@drawable/minor_divider"
            android:showDividers="middle"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/movie_name_tv"
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="italic|bold"

                android:text="Default"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/movie_release_tv"
                android:layout_width="match_parent"
                android:gravity="center"

                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
    <Button
        android:id="@+id/date_time_picker"
        android:text="Pick"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/cinema_spinner"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_gravity="center"
        android:stepSize="0.5"
        />

    <Button
        android:id="@+id/post_cinema"
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

</LinearLayout>